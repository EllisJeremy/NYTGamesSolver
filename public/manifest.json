{
  "manifest_version": 3,
  "name": "NYT Games Solver",
  "version": "1.0",
  "web_accessible_resources": [
    {
      "resources": ["fonts/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "src/logic/browserScope/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/logic/pageScope/content.ts"]
    }
  ]
}
